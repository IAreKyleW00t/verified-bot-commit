{
  "name": "verified-bot-commit",
  "description": "GitHub Action for creating signed and verified bot commits",
  "version": "1.0.14",
  "author": "Kyle Colantonio",
  "private": true,
  "homepage": "https://github.com/IAreKyleW00t/verified-bot-commit",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IAreKyleW00t/verified-bot-commit.git"
  },
  "bugs": {
    "url": "https://github.com/IAreKyleW00t/verified-bot-commit/issues"
  },
  "keywords": [
    "actions",
    "node",
    "git"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "bundle": "npm run format:write && npm run package",
    "ci-test": "npx jest",
    "format:write": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "lint": "npx eslint .",
    "package": "npx ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "package:watch": "npm run package -- --watch",
    "test": "npx jest",
    "all": "npm run format:write && npm run lint && npm run test && npm run package"
  },
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.0",
    "@actions/glob": "^0.5.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@tsconfig/recommended": "^1.0.8",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.13",
    "@vercel/ncc": "^0.38.3",
    "eslint": "^9.23.0",
    "eslint-plugin-github": "^6.0.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-jsonc": "^2.19.1",
    "eslint-plugin-prettier": "^5.2.4",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "prettier-eslint": "^16.3.0",
    "ts-jest": "^29.3.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.28.0"
  }
}
